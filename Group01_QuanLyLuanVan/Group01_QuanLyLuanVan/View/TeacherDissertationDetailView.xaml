<Page x:Class="Group01_QuanLyLuanVan.View.TeacherDissertationDetailView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Group01_QuanLyLuanVan.View"
       mc:Ignorable="d" 
      xmlns:i= "http://schemas.microsoft.com/xaml/behaviors"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      Height="605" Width="700"
      DataContext="{StaticResource TeacherDissertationDetailVM}"
      Title="TeacherDissertationDetailView"
      Name="TeacherDissertationDetailWd">

    <Page.Triggers>
        <EventTrigger RoutedEvent="Page.Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <ThicknessAnimation Storyboard.TargetName="TeacherDissertationDetailWd"
                                    Storyboard.TargetProperty="Margin"
                                    From="426,0,0,0"
                                    To="0"
                                    Duration="0:0:0.2" />
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Page.Triggers>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="123"/>
            <RowDefinition Height="110"/>
            <RowDefinition Height="90"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">

            <StackPanel Orientation="Horizontal"
                Grid.Row="0">
                <Label Cursor="Hand"
                    Height="70"
                    Grid.Row="0"
                    Width="75"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    x:Name="lbl">
                    <materialDesign:PackIcon Kind="ArrowLeft"
                      Height="40"
                      Width="35"
                      Margin="30 10 0 0"/>
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="MouseLeftButtonDown">
                            <i:InvokeCommandAction Command="{Binding back}"
                             CommandParameter="{Binding ElementName=DetailTopicwd}"/>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </Label>
            </StackPanel>
            <TextBlock
                    Text="CHI TIẾT ĐỀ TÀI"
                    FontWeight = "SemiBold"
                    FontFamily = "{StaticResource Custom}"
                    FontSize = "30"
                    Foreground = "#55b3d9"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
            </TextBlock >
        </Grid>
        <Grid Grid.Row="1">
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                <StackPanel Orientation="Vertical">
                    <TextBlock
                    Text="MÃ ĐỀ TÀI"
                    FontFamily="{StaticResource Custom}"
                    HorizontalAlignment="Center"
                            />
                    <Border BorderThickness="0.5" BorderBrush="Gray" CornerRadius="10" Width="300">
                        <TextBox
                        x:Name="deTaiId"
                        HorizontalAlignment="Left"
                        Width="300"
                        FontFamily="{StaticResource Custom}"
                        BorderThickness="0"
                        materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                        materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
                        IsReadOnly="True"
                        materialDesign:TextFieldAssist.TextBoxViewMargin="10,0,0,0"/>
                    </Border>
                </StackPanel>
                <StackPanel Orientation="Vertical"
                            Margin="20,0,0,0">
                    <TextBlock
                    Text="TÊN ĐỀ TÀI"
                    FontFamily="{StaticResource Custom}"
                    HorizontalAlignment="Center"
                            />
                    <Border BorderThickness="0.5" BorderBrush="Gray" CornerRadius="10" Width="300">
                        <TextBox
                        x:Name="TenDeTai"
                        HorizontalAlignment="Left"
                        Width="300"
                        FontFamily="{StaticResource Custom}"
                        BorderThickness="0"
                        materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                        materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
                        materialDesign:TextFieldAssist.TextBoxViewMargin="10,0,0,0"/>
                    </Border>
                </StackPanel>
            </StackPanel>

        </Grid>
        <Grid Grid.Row="2">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <StackPanel Orientation="Vertical">
                    <TextBlock
                    Text="TÊN THỂ LOẠI"
                    FontFamily="{StaticResource Custom}"
                    HorizontalAlignment="Center"
                            />
                    <Border BorderThickness="0.5" BorderBrush="Gray" CornerRadius="10" Width="300">
                        <TextBox
                        x:Name="TenTheLoai"
                        HorizontalAlignment="Left"
                        Width="300"
                        FontFamily="{StaticResource Custom}"
                        BorderThickness="0"
                        materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                        materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
                        IsReadOnly="True"
                        materialDesign:TextFieldAssist.TextBoxViewMargin="10,0,0,0"/>
                    </Border>
                </StackPanel>
                <StackPanel Orientation="Vertical"
                            Margin="20,0,0,0">
                    <TextBlock
                    Text="TÊN GIẢNG VIÊN HƯỚNG DẪN"
                    FontFamily="{StaticResource Custom}"
                    HorizontalAlignment="Center"
                            />
                    <Border BorderThickness="0.5" BorderBrush="Gray" CornerRadius="10" Width="300">
                        <TextBox
                        x:Name="HoTen"
                        HorizontalAlignment="Left"
                        Width="300"
                        FontFamily="{StaticResource Custom}"
                        BorderThickness="0"
                        materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                        materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
                        IsReadOnly="True"
                        materialDesign:TextFieldAssist.TextBoxViewMargin="10,0,0,0"/>
                    </Border>
                </StackPanel>

            </StackPanel>
        </Grid>
        <Grid Grid.Row="3">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <StackPanel Orientation="Vertical">
                    <TextBlock
                    Text="NGÀY BẮT ĐẦU"
                    FontFamily="{StaticResource Custom}"
                    HorizontalAlignment="Center"
                            />
                    <Border BorderThickness="0.5" BorderBrush="Gray" CornerRadius="10" Width="300">
                        <TextBox
                        x:Name="NgayBatDau"
                        HorizontalAlignment="Left"
                        Width="300"
                        FontFamily="{StaticResource Custom}"
                        BorderThickness="0"
                        materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                        materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
                        IsReadOnly="True"
                        materialDesign:TextFieldAssist.TextBoxViewMargin="10,0,0,0"/>
                    </Border>
                </StackPanel>
                <StackPanel Orientation="Vertical"
                            Margin="20,0,0,0">
                    <TextBlock
                    Text="NGÀY KẾT THÚC"
                    FontFamily="{StaticResource Custom}"
                    HorizontalAlignment="Center"
                            />
                    <Border BorderThickness="0.5" BorderBrush="Gray" CornerRadius="10" Width="300">
                        <TextBox
                        x:Name="NgayKetThuc"
                        HorizontalAlignment="Left"
                        Width="300"
                        FontFamily="{StaticResource Custom}"
                        BorderThickness="0"
                        materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                        materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
                        IsReadOnly="True"
                        materialDesign:TextFieldAssist.TextBoxViewMargin="10,0,0,0"/>
                    </Border>
                </StackPanel>

            </StackPanel>
        </Grid>
        <Grid Grid.Row="4">
            <StackPanel Orientation="Vertical"
                        Margin="0,10,0,0">
                <TextBlock
                    Text="MÔ TẢ"
                    FontFamily="{StaticResource Custom}"
                    HorizontalAlignment="Center"
                            />
                <Border BorderThickness="0.5" BorderBrush="Gray" CornerRadius="10" Width="620">
                    <TextBox
                        x:Name="MoTa"
                        HorizontalAlignment="Left"
                        Width="620"
                        Height="80"
                        FontFamily="{StaticResource Custom}"
                        BorderThickness="0"
                        materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                        materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
                        materialDesign:TextFieldAssist.TextBoxViewMargin="10,0,0,0"/>
                </Border>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="5">
            <StackPanel Orientation="Vertical">
                <TextBlock
                    Text="YÊU CẦU"
                    FontFamily="{StaticResource Custom}"
                    HorizontalAlignment="Center"
                            />
                <Border BorderThickness="0.5" BorderBrush="Gray" CornerRadius="10" Width="620">
                    <TextBox
                        x:Name="YeuCau"
                        HorizontalAlignment="Left"
                        Width="622"
                        Height="76"
                        FontFamily="{StaticResource Custom}"
                        BorderThickness="0"
                        materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                        materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
                        materialDesign:TextFieldAssist.TextBoxViewMargin="10,0,0,0" Margin="-2,0,0,0"/>
                </Border>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="6">
            <StackPanel Orientation="Vertical">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <StackPanel Orientation="Vertical">
                        <TextBlock
        Text="THÀNH VIÊN"
        FontFamily="{StaticResource Custom}"
        HorizontalAlignment="Center"
                />
                        <Border BorderThickness="0.5" BorderBrush="Gray" CornerRadius="10" Width="300">
                            <TextBox
            x:Name="ThanhVien"
            HorizontalAlignment="Left"
            Width="300"
            Height="50"
            FontFamily="{StaticResource Custom}"
            BorderThickness="0"
            materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
            materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
IsReadOnly="True"
            materialDesign:TextFieldAssist.TextBoxViewMargin="10,0,0,0"/>
                        </Border>
                    </StackPanel>
                    <StackPanel Orientation="Vertical"
                Margin="20,0,0,0">
                        <TextBlock
        Text="SỐ LƯỢNG"
        FontFamily="{StaticResource Custom}"
        HorizontalAlignment="Center"
                />
                        <Border BorderThickness="0.5" BorderBrush="Gray" CornerRadius="10" Width="300">
                            <TextBox
            x:Name="SoLuong"
            HorizontalAlignment="Left"
            Width="300"
                                Height="50"
            FontFamily="{StaticResource Custom}"
            BorderThickness="0"
            materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
            materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
            materialDesign:TextFieldAssist.TextBoxViewMargin="10,0,0,0"/>
                        </Border>
                    </StackPanel>

                </StackPanel>

            </StackPanel>
        </Grid>
        <Grid Grid.Row="7">
            <Button Content="Cập nhập"
                    Margin="490,0,50,0"
                            BorderThickness="0"
                            x:Name="btnregister"
                            materialDesign:ButtonAssist.CornerRadius="10"
                            Background="#55b3d9" Height="32" VerticalAlignment="Center">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="Click">
                        <i:InvokeCommandAction Command="{Binding UpdateTopicCM}"
                                   CommandParameter="{Binding ElementName=TeacherDissertationDetailWd}"></i:InvokeCommandAction>
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </Button>
            <Button Content="Xóa"
                Margin="50,0,490,0"
                BorderThickness="0"
                x:Name="btnDelete"
                materialDesign:ButtonAssist.CornerRadius="10"
                Background="#55b3d9" Height="32" VerticalAlignment="Center">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="Click">
                        <i:InvokeCommandAction Command="{Binding DeleteTopicCM}"
                                   CommandParameter="{Binding ElementName=TeacherDissertationDetailWd}"></i:InvokeCommandAction>
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </Button>


        </Grid>
    </Grid>
</Page>

